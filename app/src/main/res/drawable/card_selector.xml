<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#353535"
                android:centerColor="#3D3D3D"
                android:endColor="#353535" />
            <stroke
                android:width="2dp"
                android:color="#FF8C42" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#323232"
                android:centerColor="#3A3A3A"
                android:endColor="#323232" />
            <stroke
                android:width="1dp"
                android:color="#FF8C42" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#2A2A2A"
                android:centerColor="#323232"
                android:endColor="#2A2A2A" />
            <stroke
                android:width="1dp"
                android:color="#404040" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>